/* 基础容器样式 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

/* 顶部标题栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.back-icon {
  color: #09bb07;
  font-size: 32rpx;
}

.station-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.favorite-btn {
  background: none;
  border: none;
  font-size: 36rpx;
  color: #ff0000;
  padding: 0;
}

/* AI分析区域 */
.ai-analysis {
  margin: 20rpx 0;
  padding: 25rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.analysis-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #09bb07;
}

/* 通用标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 25rpx 0 15rpx;
  color: #333;
}

/* 时刻表样式 */
.schedule {
  background-color: #fff;
  padding: 25rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.line-title {
  font-weight: bold;
  margin: 15rpx 0;
  color: #444;
}

.direction-time {
  display: flex;
  justify-content: space-between;
  margin: 12rpx 0;
  font-size: 28rpx;
  color: #666;
}

/* 切换按钮 */
.toggle-buttons {
  display: flex;
  margin: 25rpx 0;
}

.toggle-buttons button {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx 0;
  text-align: center;
  color: #333;
}

.toggle-buttons button.active {
  background-color: #09bb07;
  color: white;
}

/* 内容区域 */
.content-area {
  margin-top: 20rpx;
}

.tab-content {
  background-color: #fff;
  padding: 25rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05); 
  margin-bottom: 20rpx; 
}

.info-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-name {
  color: rgb(0, 0, 0);
  font-size: 31rpx;
  display: block; 
  margin-bottom: 10rpx;
}

.info-value {
  color: #333;
  font-weight: 500;
  font-size: 28rpx;
  display: block;
}

/* 实时班次样式 */
.train-schedule {
  padding: 16rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.time-update {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.current-time {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.real-time {
  font-size: 24rpx;
  color: #999;
}

.train-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.direction-info {
  display: flex;
  flex-direction: column;
}

.direction {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.train-time {
  font-size: 22rpx;
  color: #999;
}

.remain-time {
  font-size: 28rpx;
  font-weight: bold;
}