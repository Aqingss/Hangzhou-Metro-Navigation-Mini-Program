/* 返回按钮样式 */
.nav-back {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 轮播图样式 */
.swiper-container {
  height: 300rpx;
  margin-bottom: 20rpx;
}
.custom-swiper {
  height: 100%;
}
.swiper-item {
  height: 100%;
  transition: all 0.3s ease;
}
.swiper-item.active {
  transform: scale(1.05);
}
.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.indicator {
  display: flex;
  justify-content: center;
  margin-top: 10rpx;
}
.dot {
  width: 12rpx;
  height: 12rpx;
  margin: 0 6rpx;
  border-radius: 50%;
  background-color: #ccc;
}
.dot.active {
  background-color: #09bb07;
}

/* 地铁线路样式 */
.subway-container {
  display: flex;
  height: calc(100vh - 350rpx);
}
.left-line {
  width: 25%;
  background-color: #f5f5f5;
}
.line-item {
  padding: 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #e5e5e5;
}
.line-item.active {
  background-color: #fff;
  color: #09bb07;
  font-weight: bold;
}
.right-station {
  width: 75%;
  padding: 20rpx;
}
.station-group {
  margin-bottom: 30rpx;
}
.station-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}
.station-item {
  margin-bottom: 20rpx;
  padding: 15rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}
.station-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  color: #444;
}
.tags {
  display: flex;
  flex-wrap: wrap;
}
.tag {
  margin-right: 10rpx;
  margin-bottom: 5rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}