/* 顶部导航栏 */
.nav-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 88rpx;
    background-color: #fff;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    z-index: 100;
  }
  
  .nav-left {
    width: 48rpx;
    height: 48rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .nav-left image {
    width: 40rpx;
    height: 40rpx;
  }
  
  .nav-title {
    flex: 1;
    text-align: center;
    font-size: 36rpx;
    font-weight: 500;
    color: #333;
  }
  
  /* 内容区域 */
  .content {
    padding-top: 108rpx;
    padding-bottom: 20rpx;
    background-color: #f5f5f5;
  }
  
  /* 起点终点卡片 */
  .route-info-card {
    background-color: #fff;
    margin: 20rpx;
    border-radius: 20rpx;
    padding: 30rpx 25rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  }
  
  .route-point {
    display: flex;
    align-items: center;
    margin-bottom: 25rpx;
  }
  
  .route-point:last-child {
    margin-bottom: 0;
  }
  
  .point-dot {
    width: 14rpx;
    height: 14rpx;
    border-radius: 50%;
    margin-right: 18rpx;
  }
  
  .red {
    background-color: #ff4d4f;
  }
  
  .green {
    background-color: #52c41a;
  }
  
  .point-text {
    font-size: 32rpx;
    color: #333;
  }
  
  /* 路线类型标签 */
  .route-tabs {
    display: flex;
    background-color: #fff;
    margin: 20rpx;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  
  .tab-item {
    flex: 1;
    text-align: center;
    padding: 20rpx 0;
    font-size: 28rpx;
    color: #666;
    border-right: 1rpx solid #f5f5f5;
  }
  
  .tab-item:last-child {
    border-right: none;
  }
  
  .tab-item.active {
    background-color: #f5f5f5;
    color: #333;
  }
  
  /* 加载遮罩 */
  .loading-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(255, 255, 255, 0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 200;
  }
  
  .loading-icon {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .loading-icon image {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 15rpx;
  }
  
  .loading-icon text {
    font-size: 28rpx;
    color: #666;
  }
  
  /* 错误提示 */
  .error-tip {
    padding: 100rpx 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .error-tip text {
    font-size: 30rpx;
    color: #999;
    margin-bottom: 30rpx;
  }
  
  .retry-btn {
    background-color: #409eff;
    color: #fff;
    border-radius: 24rpx;
    padding: 12rpx 40rpx;
    font-size: 28rpx;
  }
  
  /* 空状态 */
  .empty-state {
    padding: 100rpx 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .empty-state image {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 30rpx;
    opacity: 0.6;
  }
  
  .empty-state text {
    font-size: 30rpx;
    color: #999;
  }
  
  /* 路线列表 */
  .route-list {
    padding: 0 20rpx;
  }
  
  .route-card {
    background-color: #fff;
    margin-bottom: 20rpx;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    overflow: hidden;
    transition: all 0.2s;
  }
  
  .route-card:active {
    transform: scale(0.98);
    background-color: #f8f8f8;
  }
  
  .route-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25rpx 25rpx 15rpx 25rpx;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .time-info {
    display: flex;
    flex-direction: column;
  }
  
  .time-text {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 5rpx;
  }
  
  .distance-text {
    font-size: 26rpx;
    color: #666;
  }
  
  .type-tag {
    padding: 8rpx 20rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    color: #fff;
  }
  
  .type-tag.subway {
    background-color: #409eff;
  }
  
  .type-tag.bus {
    background-color: #52c41a;
  }
  
  .type-tag.walk {
    background-color: #ff7a45;
  }
  
  .type-tag.bike {
    background-color: #ffc53d;
  }
  
  .type-tag.drive {
    background-color: #ff4d4f;
  }
  
  .route-detail {
    padding: 20rpx 25rpx;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .detail-text {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
    margin-bottom: 15rpx;
  }
  
  /* 交通方式图标 */
  .transport-icons {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }
  
  .icon-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 20rpx;
  }
  
  .icon-item image {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 5rpx;
  }
  
  .icon-item text {
    font-size: 24rpx;
    color: #666;
  }
  
  /* 地铁站列表 */
  .station-list {
    display: flex;
    flex-direction: column;
    padding-left: 20rpx;
    position: relative;
    margin-top: 20rpx;
  }
  
  .station-list::before {
    content: '';
    position: absolute;
    left: 6rpx;
    top: 10rpx;
    bottom: 10rpx;
    width: 2rpx;
    background-color: #409eff;
    z-index: 1;
  }
  
  .station-item {
    display: flex;
    align-items: center;
    margin-bottom: 15rpx;
    z-index: 2;
  }
  
  .station-dot {
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background-color: #409eff;
    margin-right: 15rpx;
  }
  
  .station-name {
    font-size: 28rpx;
    color: #333;
  }
  
  .route-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 25rpx;
  }
  
  .cost-text {
    font-size: 28rpx;
    color: #666;
  }
  
  .nav-btn {
    background-color: #409eff;
    color: #fff;
    border-radius: 24rpx;
    padding: 12rpx 30rpx;
    font-size: 28rpx;
    border: none;
  }