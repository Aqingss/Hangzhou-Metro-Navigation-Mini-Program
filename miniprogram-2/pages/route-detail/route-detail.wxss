/* pages/route-detail/route-detail.wxss */
/* 顶部导航栏 */
.nav-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 88rpx;
    background-color: #fff;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    z-index: 100;
  }
  
  .nav-left {
    width: 48rpx;
    height: 48rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .nav-left image {
    width: 40rpx;
    height: 40rpx;
  }
  
  .nav-title {
    flex: 1;
    text-align: center;
    font-size: 36rpx;
    font-weight: 500;
    color: #333;
  }
  
  /* 内容区域 */
  .content {
    padding-top: 108rpx;
    padding-bottom: 120rpx;
    background-color: #f5f5f5;
  }
  
  /* 路线摘要 */
  .route-summary {
    background-color: #fff;
    margin: 20rpx;
    border-radius: 20rpx;
    padding: 30rpx 25rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .time-info {
    display: flex;
    flex-direction: column;
  }
  
  .time-text {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 5rpx;
  }
  
  .distance-text, .cost-text {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 5rpx;
  }
  
  .type-tag {
    padding: 8rpx 20rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    color: #fff;
  }
  
  .type-tag.subway {
    background-color: #409eff;
  }
  
  .type-tag.bus {
    background-color: #52c41a;
  }
  
  .type-tag.walk {
    background-color: #ff7a45;
  }
  
  .type-tag.bike {
    background-color: #ffc53d;
  }
  
  .type-tag.drive {
    background-color: #ff4d4f;
  }
  
  /* 路线描述 */
  .route-desc {
    background-color: #fff;
    margin: 20rpx;
    border-radius: 20rpx;
    padding: 30rpx 25rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  }
  
  .desc-title {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 15rpx;
  }
  
  .desc-text {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
  }
  
  /* 交通方式图标 */
  .transport-icons {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    background-color: #fff;
    margin: 20rpx;
    border-radius: 20rpx;
    padding: 30rpx 25rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  }
  
  .icon-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 30rpx;
  }
  
  .icon-item image {
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 10rpx;
  }
  
  .icon-item text {
    font-size: 26rpx;
    color: #666;
  }
  
  /* 详细路线步骤 */
  .route-steps {
    background-color: #fff;
    margin: 20rpx;
    border-radius: 20rpx;
    padding: 30rpx 25rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  }
  
  .steps-title {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 20rpx;
  }
  
  .station-list {
    display: flex;
    flex-direction: column;
    padding-left: 20rpx;
    position: relative;
  }
  
  .station-list::before {
    content: '';
    position: absolute;
    left: 6rpx;
    top: 10rpx;
    bottom: 10rpx;
    width: 2rpx;
    background-color: #409eff;
    z-index: 1;
  }
  
  .station-item {
    display: flex;
    align-items: center;
    margin-bottom: 15rpx;
    z-index: 2;
  }
  
  .station-dot {
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background-color: #409eff;
    margin-right: 15rpx;
  }
  
  .station-name {
    font-size: 28rpx;
    color: #333;
  }
  
  /* 底部按钮 */
  .bottom-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20rpx;
    background-color: #fff;
    box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  
.nav-btn {
    background-color: #409eff;
    color: #fff;
    border-radius: 24rpx;
    padding: 16rpx 30rpx;
    font-size: 32rpx;
    border: none;
    width: 100%;
}