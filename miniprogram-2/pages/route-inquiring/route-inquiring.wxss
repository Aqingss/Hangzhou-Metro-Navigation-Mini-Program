/* 顶部导航栏样式 */
.nav-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 88rpx;
    background: #ffffff;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    z-index: 100;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
  }
  .nav-left {
    width: 48rpx;
    height: 48rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .nav-left image {
    width: 40rpx;
    height: 40rpx;
  }
  .nav-title {
    flex: 1;
    text-align: center;
    font-size: 36rpx;
    font-weight: 500;
    color: #333333;
  }
  /* 主内容区样式 */
  .content-container {
    padding-top: 108rpx; /* 导航栏高度 + 间距 */
    padding-bottom: 120rpx; /* 底部安全区 */
    background: #f5f5f5;
  }
  /* 地址输入卡片 */
  .card-style {
    background: #ffffff;
    border-radius: 20rpx;
    margin: 0 20rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
    padding: 30rpx 25rpx;
  }
  .input-group {
    margin-bottom: 20rpx;
  }
  .input-item {
    display: flex;
    align-items: center;
    padding: 25rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
  }
  .input-item:last-child {
    border-bottom: none;
  }
  .dot {
    width: 14rpx;
    height: 14rpx;
    margin-right: 18rpx;
    border-radius: 50%;
  }
  .red {
    background-color: #ff4d4f;
    width: 10px;
    height: 10px;
  }
  .green {
    background-color: #52c41a;
    width: 10px;
    height: 10px;
  }
  input {
    flex: 1;
    font-size: 32rpx;
    color: #333333;
    outline: none;
  }
  /* 快捷入口 */
  .shortcut-bar {
    display: flex;
    justify-content: space-around;
    padding: 20rpx 20rpx;
    background: #ffffff;
    margin: 20rpx;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  .shortcut-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .shortcut-item image {
    width: 52rpx;
    height: 52rpx;
    margin-bottom: 8rpx;
  }
  .shortcut-item text {
    font-size: 28rpx;
    color: #666666;
  }
  /* 搜索历史面板 */
  .search-history {
    background: #ffffff;
    margin: 0 20rpx;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    margin-bottom: 20rpx;
  }
  .history-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 25rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  .clear-btn {
    color: #ff4d4f;
    font-size: 28rpx;
  }
  .history-list,
  .recommend-list {
    padding: 20rpx 25rpx;
  }
  .history-item,
  .recommend-item {
    padding: 18rpx 0;
    font-size: 30rpx;
    color: #333333;
    border-bottom: 1rpx solid #f0f0f0;
  }
  .history-item:last-child,
  .recommend-item:last-child {
    border-bottom: none;
  }
  .recommend-title {
    padding: 20rpx 25rpx;
    font-size: 28rpx;
    color: #999999;
  }
  /* 底部操作栏 */
  .bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20rpx;
    background: #ffffff;
    box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  .route-btn {
    background: #409eff;
    color: #ffffff;
    border-radius: 24rpx;
    padding: 18rpx 0;
    font-size: 32rpx;
    border: none;
    box-shadow: 0 4rpx 12rpx rgba(64, 158, 255, 0.2);
  }